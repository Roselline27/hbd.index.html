<script src="https://www.youtube.com/iframe_api"></script>
<script>
    const envelope = document.getElementById('envelope');
    const letter = document.getElementById('letter');
    const toggleMusicButton = document.getElementById('toggleMusicButton');
    let player;
    let isOpened = false;
    let isMusicPlaying = false;

    function openEnvelope() {
        if (!isOpened) {
            envelope.classList.add('open');
            setTimeout(() => {
                letter.style.display = 'block';
            }, 500);
            isOpened = true;
        }
    }

    function onYouTubeIframeAPIReady() {
        player = new YT.Player('youtubePlayer', {
            height: '0',
            width: '0',
            videoId: 'iNqdSJIeMnA', // Correct YouTube video ID for your music
            playerVars: { autoplay: 0, loop: 1, playlist: 'iNqdSJIeMnA' }
        });
    }

    function toggleMusic() {
        if (!player) return;
        if (!isMusicPlaying) {
            player.playVideo();
            toggleMusicButton.classList.add("playing");
            toggleMusicButton.textContent = "Pause Music â¸ï¸";
            isMusicPlaying = true;
        } else {
            player.pauseVideo();
            toggleMusicButton.classList.remove("playing");
            toggleMusicButton.textContent = "Play Music ðŸŽµ";
            isMusicPlaying = false;
        }
    }

    // Create falling colorful balloons
    const balloonColors = ["#ff8a80", "#ff80ab", "#ff4081", "#f50057", "#d500f9"];
    const balloonShapes = ["ðŸŽˆ", "ðŸŽ‰", "ðŸŽˆ", "ðŸŽ‰", "ðŸŽ€"];

    function createBalloon() {
        const balloon = document.createElement("div");
        balloon.className = "shape";
        balloon.innerHTML = balloonShapes[Math.floor(Math.random() * balloonShapes.length)];
        balloon.style.left = Math.random() * 100 + "vw";
        balloon.style.color = balloonColors[Math.floor(Math.random() * balloonColors.length)];
        balloon.style.fontSize = 25 + Math.random() * 30 + "px";
        balloon.style.animationDuration = 4 + Math.random() * 4 + "s";
        document.body.appendChild(balloon);
        setTimeout(() => { balloon.remove(); }, 8000);
    }
    setInterval(createBalloon, 700);
</script>

